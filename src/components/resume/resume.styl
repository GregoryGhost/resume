.container
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    width: 90%
    margin: 0 auto
    padding: 4.75rem 3% 4.75rem 3%

    &__row
        margin-bottom: 2.5rem
    
    &__column-left
        width: 35%
            
    &__column-right
        width: 60%

    @media (max-width: 990px)
        &__column-left, &__column-right
            width: 100%
        &
            width: 95%
            padding: 2.3rem 0 2.3rem 0
