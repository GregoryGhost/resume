.container
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    width: 90%
    margin: 0 auto
    padding: 4.75rem 3% 4.75rem 3.16%
    
    &__column-left
        width: 40%
            
    &__column-right
        width: 60%

    @media (max-width: 990px)
        &__column-left, &__column-right
            width: 100%
        &
            width: 80%
            padding-top: 2.3rem
            padding-bottom: 2.3rem
