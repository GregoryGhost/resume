.info-header
    display: flex
    align-items: center
    flex-direction: column
    
    &__avatar
        width: 15rem
        height: 15rem
        margin-bottom: 1.5rem

    &__name,
    &__surname,
    &__specialization
        text-transform: uppercase
        text-align: center
        line-height: 1
        font-size: 3.5rem

    &__surname,
    &__specialization
        font-weight: bold

    &__specialization
        font-size: 1.5rem
        
    &__specialization
        line-height: 1.5
