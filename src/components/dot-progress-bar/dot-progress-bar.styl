@import "../../global/colors.styl"

.dot-progress-bar
    display: flex
    flex-wrap: wrap
    justify-content: space-around
    
    &__title
        text-transform: uppercase
        text-align: center
        font-size: 1.56rem
        margin-bottom: 0.5rem

    &__progress
        display: flex
        justify-content: space-around
        align-items: center
        width: 90%

        @media (max-width: 480px)
            width: 100%
        
    &__dot, &__dot_filled
        height: 1.125rem
        width: 1.125rem
        border-radius: 50%
        background-color: $colorGray

    &__dot_filled
        background-color: $colorBlue
