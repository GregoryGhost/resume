@import "../../global/colors.styl"

.avatar
    height: 100%
    border-radius: 50%
    padding: 5.5%
    border: 0.06rem solid $colorBlue

    &__background
        height: 100%
        display: flex
        justify-content: center
        align-items: center
        overflow: hidden
        background-color: $colorBlue
        border-radius: 50%
        padding: 0.8rem
        
     &__img
        width: 100%
        
     &__background, &__img
        padding: 0
