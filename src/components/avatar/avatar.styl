$colorBlue = blue

.avatar
    height: 25px
    width: 25px
    border-radius: 50%
    padding: 1%
    border: 1px solid $colorBlue

    &__background
        height: 100%
        display: flex
        justify-content: center
        align-items: center
        overflow: hidden
        background-color: $colorBlue
        border-radius: 50%